#include <stdio.h>
#include <string.h>
int main()
{
    char s[21];
    while(scanf("%s",s) != EOF)
    {
        int l=0,r=strlen(s)-1,ans=0;
        while(l<r)
        {
            if(s[l] != s[r]) ans++;
            l++;
            r--;
        }
        printf("%d\n",ans);
    }
    return 0;
}
#include <stdio.h>
int main()
{
    int n;
    scanf("%d",&n);
    for(int i=1;i<=n;i++) printf("%d",i);
    printf("\n");
    if(n==1) return 0;
    for(int i=2;i<=n-1;i++)
    {
        printf("%d",i);
        for(int j=1;j<=n-2;j++) printf(" ");
        printf("%d\n",n-i+1);

    }
    for(int i=n;i>=1;i--) printf("%d",i);
    return 0;
}
#include <stdio.h>
#include <string.h>
int main()
{
    int a,b;
    scanf("%d %d",&a,&b);
    if(a>b) printf("Argentina");
    else if(b>a) printf("Brazil");
    else
    {
        A:
        char x[6],y[6];
        scanf("%s %s",x,y);
        int ans1=0,ans2=0;
        for(int i=0;i<5;i++)
        {
            if(x[i]=='1') ans1++;
            if(y[i]=='1') ans2++;
        }
        if(ans1>ans2) printf("Argentina");
        else if(ans2>ans1) printf("Brazil");
        else goto A;
    }
    return 0;
}



