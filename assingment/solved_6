/*  take an array of integers as an argument and return the median value of the array. */
#include<stdio.h>
int main()
{
    int n;
    scanf("%d",&n);
    int arr[1000];
    for(int i=0; i<n; i++)
        scanf("%d",&arr[i]);
    int i,j,flag=0;
    for(i=0; i<n-1; i++)
    {
        flag=0;
        for(j=0; j<n-i-1; j++)
        {
            if(arr[j]>arr[j+1])
            {
                int temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
                flag=1;
            }
        }
        if(flag==0)
            break;
    }
    if(n%2!=0)
    {
        int median=arr[n/2];
        printf("%d\n",median);
    }
    else
    {
        float median=((arr[n/2]*1.0)+arr[(n/2)-1])/2;
        printf("%.3f\n",median);
    }

    return 0;
