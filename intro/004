#include<stdio.h>
#include<math.h>
int main()
{
int a,b,i,j=1;
while(scanf("%d",&a)==1 && (a>=0))
{
if(a==1)
printf("Case %d: 0\n",j);
for(i=0;i<14;i++)
if(pow(2,i)<a && a<=pow(2,i+1))
printf("Case %d: %d\n",j,i+1);
j++;
}
return 0;
}
#include<stdio.h>
#include<math.h>
int main()
{
    double s,s1;
    long long int n,test;
    scanf("%lld",&test);
    while(test--)
    {
        scanf("%lf",&s);
        s1=(-1 + sqrt(1+(8*s)))/2;
        n=(long long)(s1);
        printf("%lld\n",n);
    }

}
