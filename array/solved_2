/*
0x16d72a0
7
1 2 3 4 5
0->7
1->1
2->2
3->3
4->4
0x16d7ae0
3
2 3 5
5->5
6->3
7->2
8->3
9->5

*/
#include<stdio.h>
#include<stdlib.h>
int main()
{
    int i,n=5,*ptr;
  //  scanf("%d",&n);
    ptr=(int*)malloc(n*sizeof(int));
    printf("%p\n",ptr);
    if(ptr==NULL)
    {
        printf("Memory allocation failed");
    }
    else
    {
    for(i=0;i<n;i++)
    {
        scanf("%d",(ptr+i));
    }
    for(i=0;i<n;i++)
    {
        printf("%d->%d\n",i,*(ptr+i));
    }
    int n=10;
    ptr=(int*)realloc(ptr,n*sizeof(int));
    printf("%p\n",ptr);
    if(ptr==NULL)
    {
        printf("Memory allocation failed");
    }
    else
    {
    for(i=5;i<n;i++)
    {
        scanf("%d",(ptr+i));
    }
    for(i=5;i<n;i++)
    {
        printf("%d->%d\n",i,*(ptr+i));
    }
   free(ptr);
    }
    }
}
