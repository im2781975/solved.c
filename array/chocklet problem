/* every four rapper shopkeaper give us 1 chocklet.if we buy n chocklet how many chocklet how many chock we eat?*/
#include<stdio.h>
int main()
{
    int i,n;
    scanf("%d",&n);
    int chock=n,pack=n;
    while(pack>=4)
    {
        chock+=(pack/4);
        pack=(pack/4)+(pack%4);
    }
    printf("%d",chock);
    return 0;
}
