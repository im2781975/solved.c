#include<stdio.h>
int print_1(int n)
{
    if(n>0)
    {
    printf("%d ",n);
    print_1(n-1);
    }
}
int print_2(int n)
{
    if(n>0)
    {
    print_2(n-1);
    printf("%d ",n);
    }
}
int sum(int n)
{
    if(n>0)
    {
        return  sum(n-1)+n;
    }
    return 0;
}
int main()
{
    int n;
    scanf("%d",&n);
    print_1(n);
    printf("\n");
    print_2(n);
    printf("\n");
    printf("%d ",sum(n));
}
