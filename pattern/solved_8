/*5
*   *
 * * 
  *  
 * * 
*   *
*/
#include<stdio.h>
int i,j;
int pattern_1(int n)
{
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n;j++)
        {
            if(i==j||i+j==n+1)
            printf("*");
            else 
            printf(" ");
        }
        printf("\n");
    }
    
}
int pattern_2(int n)
{
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n;j++)
        {
            if(j==1||i==n||i==j)
            printf("*");
            else 
            printf(" ");
        }
        printf("\n");
    }
    
}
int main()
{
    int n;
    scanf("%d",&n);
    pattern_1(n);
   // pattern_2(n);
}
